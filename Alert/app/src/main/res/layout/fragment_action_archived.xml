<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.alertpreparedness.platform.alert.min_preparedness.fragment.ActionArchivedFragment">

    <android.support.v7.widget.CardView
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vMinTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vDivider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/divider_gray"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vMinTitle" />

            <TextView
                android:id="@+id/tvActionArchived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Completed"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/rvActionArchived"
                app:layout_constraintEnd_toEndOf="@+id/vMinTitle"
                app:layout_constraintStart_toStartOf="@+id/vMinTitle"
                app:layout_constraintTop_toTopOf="@+id/vMinTitle" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvActionArchived"
                android:layout_width="match_parent"

                android:layout_height="143dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/vMinTitle" />

            <ImageView
                android:id="@+id/imgActionArchived"
                android:layout_width="13dp"
                android:layout_height="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="11dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/rvActionArchived"
                app:layout_constraintEnd_toStartOf="@+id/tvActionArchived"
                app:layout_constraintTop_toTopOf="@+id/vMinTitle"
                app:srcCompat="@drawable/alert_green_icon"
                android:layout_marginRight="11dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
