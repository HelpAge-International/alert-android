<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:background="@color/alertRed"
        android:id="@+id/vLine"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Cyclone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/tvHazardType"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tvPercentComplete"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="90% complete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_below="@+id/tvHazardType"
            android:text="qwfdsvq   ewrhfgm qwfghwqrer2qe"
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvDescription"
            android:src="@color/alertRed"
            android:id="@+id/ivStatusIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
            android:layout_below="@+id/tvDescription"
            android:layout_toRightOf="@+id/ivStatusIcon"
            android:textColor="@color/alertRed"
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/tvDescription"
            android:layout_alignParentRight="true"
            android:id="@+id/tvLastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</LinearLayout>