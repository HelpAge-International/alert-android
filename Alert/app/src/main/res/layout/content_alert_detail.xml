<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgHazardIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bg_circle"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/textViewRisk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Risk:"
            android:textColor="@color/gray_title"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgHazardIcon"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txtHazardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:text="Hazard Name"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgHazardIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewRisk"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/imgPopulationIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgHazardIcon"
            app:srcCompat="@drawable/bg_circle"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/textViewPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="Population affected:"
            android:textColor="@color/gray_title"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imgPopulationIcon"
            app:layout_constraintTop_toBottomOf="@+id/txtHazardName"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txtPopulationAffected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:text="100,000 people"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgPopulationIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewPopulation"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/imgAreaIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPopulationIcon"
            app:srcCompat="@drawable/bg_circle"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/textViewAreas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="Affected areas:"
            android:textColor="@color/gray_title"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/imgAreaIcon"
            app:layout_constraintTop_toBottomOf="@+id/txtPopulationAffected"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txtArea"
            android:lineSpacingMultiplier="1.6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgAreaIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewAreas"
            android:layout_marginLeft="16dp" />

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewInfo"
            app:srcCompat="@drawable/bg_circle"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/info_and_notes"
            android:textColor="@color/gray_title"
            android:textSize="13sp"
            app:layout_constraintStart_toEndOf="@+id/imgInfo"
            app:layout_constraintTop_toBottomOf="@+id/txtArea"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/txtInfo"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="1dp"
            android:text="@string/text_info"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgInfo"
            app:layout_constraintTop_toBottomOf="@+id/textViewInfo"
            android:layout_marginLeft="16dp" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/txtLastUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="@string/last_updated"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>