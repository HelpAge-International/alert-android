<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.faizmohideen.alert.org.example.faizmohideen.alert.activity.LoginScreen">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="495dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="107dp"
            android:layout_marginLeft="108dp"
            android:layout_marginRight="107dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="92px"
            app:srcCompat="@drawable/alert" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp">

            <EditText
                android:id="@+id/editText7"
                android:layout_width="59dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_left"
                android:drawableLeft="@drawable/login_person"
                android:cursorVisible="false"
                android:ems="10"
                android:inputType="none"
                android:padding="20dp"/>

            <View
                android:layout_width="2dp"
                android:layout_height="44dp"
                android:background="#E4E4E4"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/email_address"
                android:layout_toStartOf="@+id/email_address" />

            <EditText
                android:id="@+id/email_address"
                android:layout_width="252dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/editText7"
                android:layout_toRightOf="@+id/editText7"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/passwordImg"
                android:layout_width="59dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/rounded_left"
                android:drawableLeft="@drawable/login_lock"
                android:cursorVisible="false"
                android:ems="10"
                android:inputType="none"
                android:padding="20dp"
                android:paddingRight="15dp"/>
            <View
                android:layout_width="2dp"
                android:layout_height="44dp"
                android:background="#E4E4E4"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/password"
                android:layout_toStartOf="@+id/password" />

            <EditText
                android:id="@+id/password"
                android:layout_width="252dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/passwordImg"
                android:layout_toRightOf="@+id/passwordImg"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="0dp"
                android:paddingRight="12dp"
                android:drawableRight="@drawable/login_eye"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="315dp"
            android:layout_height="44dp"
            android:layout_marginEnd="22dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="22dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_loginbtn"
            android:text="Login"
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Forgot your password?"
            android:textColor="@android:color/background_light" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
