<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.alertpreparedness.platform.alert.dashboard.activity.UpdateAlertActivity">

    <include
        android:id="@+id/action_toolbar"
        layout="@layout/action_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_toolbar">


        <TextView
            android:id="@+id/textViewHazardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/alert_hazard"
            android:drawablePadding="16dp"
            android:text="Typhoon"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgAlertColour"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewHazardName"
            app:srcCompat="@drawable/amber_dot_26dp" />

        <TextView
            android:id="@+id/textViewAlertColour"
            android:layout_width="290dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            android:text="Amber"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgAlertColour"
            app:layout_constraintTop_toBottomOf="@+id/textViewHazardName" />

        <ImageView
            android:id="@+id/imgPopulationIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlertColour"
            app:srcCompat="@drawable/alert_population" />

        <EditText
            android:id="@+id/editTextPopulation"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            android:background="@null"
            android:ems="10"
            android:inputType="number"
            android:text="100000"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgPopulationIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewAlertColour" />

        <ImageView
            android:id="@+id/imgLocationIcon"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPopulationIcon"
            app:srcCompat="@drawable/alert_areas" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            android:text="Philippines, Leyte"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toEndOf="@+id/imgLocationIcon"
            app:layout_constraintTop_toBottomOf="@+id/editTextPopulation" />

        <TextView
            android:id="@+id/textViewAddMoreArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Add another affected area"
            app:layout_constraintStart_toEndOf="@+id/imgLocationIcon"
            app:layout_constraintTop_toBottomOf="@+id/textViewLocation" />

        <ImageView
            android:id="@+id/imgLocationIcon2"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="66dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgLocationIcon"
            app:srcCompat="@drawable/alert_information" />


        <EditText
            android:id="@+id/editTextInfo"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="33dp"
            android:background="@null"
            android:ems="10"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="@string/text_info"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imgLocationIcon2"
            app:layout_constraintTop_toBottomOf="@+id/textViewAddMoreArea" />


    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btnSaveChanges"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/btnColor"
        android:text="Save changes"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
