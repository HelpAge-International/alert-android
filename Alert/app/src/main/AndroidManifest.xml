<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.alertpreparedness.platform.alert"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".AlertApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.activity.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".login.activity.LoginScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".dashboard.activity.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"/>

        <activity
            android:name=".risk_monitoring.RiskMonitoringActivity"
            android:label="@string/title_activity_risk_monitoring"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>