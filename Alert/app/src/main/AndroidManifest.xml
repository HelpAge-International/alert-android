<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.alertpreparedness.platform.alert">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- <uses-permission android:name="android.permission.CAMERA" /> -->


    <!-- Leak canary needs access to External storage to save heap dumps -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>

    <application
        android:name=".AlertApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:replace="android:allowBackup"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <service
            android:exported="false"
            android:name=".offline.SyncJobService">
            <intent-filter>
                <action android:name="com.firebase.jobdispatcher.ACTION_EXECUTE"/>
            </intent-filter>
        </service>
        <service
            android:exported="false"
            android:name=".notifications.IndicatorNotificationService">
        </service>
        <service
            android:exported="false"
            android:name=".notifications.ActionNotificationService">
        </service>

        <service
            android:name=".notifications.AlertFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".notifications.AlertFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <activity
            android:name=".login.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.activity.LoginScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".dashboard.activity.HomeScreen"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/alert_logo" />

        <meta-data android:name="firebase_crashlytics_collection_enabled" android:value="false" />

        <activity android:name=".MainDrawer" />
        <!-- <activity -->
        <!-- android:name=".risk_monitoring.vRiskFragmentvity" -->
        <!-- android:label="@string/title_activity_risk" -->
        <!-- android:launchMode="singleTask" -->
        <!-- android:screenOrientation="portrait" -->
        <!-- android:theme="@style/AppTheme.NoActionBar" /> -->
        <activity
            android:name=".risk_monitoring.view.AddIndicatorActivity"
            android:label="@string/title_activity_add_indicator"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".risk_monitoring.view.SelectAreaActivity"
            android:label="@string/title_activity_select_area"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".dashboard.activity.CreateAlertActivity"
            android:label="@string/title_activity_create_alert"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".dashboard.activity.HazardSelectionActivity"
            android:label="@string/select_hazard_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".dashboard.activity.MultiHazardSelectionActivity"
            android:label="@string/select_hazard_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".dashboard.activity.AlertDetailActivity"
            android:parentActivityName=".dashboard.activity.HomeScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:theme="@style/AppTheme.NoActionBar"
            android:value=".dashboard.activity.HomeScreen" />

        <activity
            android:name=".risk_monitoring.view.UpdateIndicatorActivity"
            android:label="@string/title_activity_update_indicator"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".risk_monitoring.view.LogIndicatorActivity"
            android:label="@string/title_activity_log_indicator"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".risk_monitoring.view.IndicatorLogActivity"
            android:label="@string/title_activity_indicator_log"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".dashboard.activity.UpdateAlertActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mycountry.ProgramResultsActivity"
            android:label="@string/progrmme_results"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".settings.ChangeEmailActivity"
            android:label="@string/change_email" />
        <activity
            android:name=".settings.ChangePasswordActivity"
            android:label="@string/change_password" />
        <activity
            android:name=".min_preparedness.activity.CompleteActionActivity"
            android:label="@string/txt_complete_action" />
        <activity
            android:name=".min_preparedness.activity.AddNotesActivity"
            android:label="Notes" />
        <activity
            android:name=".adv_preparedness.activity.CreateAPAActivity"
            android:label="@string/txt_create_apa" />
        <activity
            android:name=".adv_preparedness.activity.EditAPAActivity"
            android:label="@string/edit_apa" />
        <activity android:name=".min_preparedness.activity.ViewAttachmentsActivity"
            android:label="@string/attachments"/>
    </application>

</manifest>